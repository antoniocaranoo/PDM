<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.welcome.fragment.autenticationFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/login_image"
        android:layout_marginBottom="@dimen/margin_medium">

    </ImageView>

    <Button
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:id="@+id/registratiButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="@string/sign_in"
        android:layout_marginBottom="@dimen/margin_medium"/>


    <Button
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:id="@+id/accediButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:text="@string/log_in" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginEnd="100dp">

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_toStartOf="@id/text_or"
            android:background="#555" />

        <TextView
            android:id="@+id/text_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/oppure"
            />

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_toEndOf="@id/text_or"
            android:background="#555" />

    </RelativeLayout>

    <Button
        android:id="@+id/googleButton"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="50dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginEnd="50dp"
        android:text="@string/accedi_google"
        app:icon="@drawable/icon_google"
        app:iconGravity="textStart"
        app:iconTint="@null" />

</LinearLayout>